<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".RegisterActivity"
    android:background="@drawable/layout_background">
<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cv_register"
    android:layout_marginTop="100dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:elevation="2dp"
    app:cardCornerRadius="20dp">
    <TextView
        android:id="@+id/tv_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="REGISTER"
        android:textColor="#09a6f6"
        android:textSize="30sp"
        android:textStyle="italic" />
    <TextView
        android:id="@+id/tv_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:text="Name"
        android:textColor="#1565c0"
        android:textSize="20sp"
        android:layout_marginLeft="10dp"/>
    <EditText
        android:id="@+id/et_name_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:hint="enter your name"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_name"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="180dp"
        android:text="Mobile Number"
        android:layout_marginLeft="10dp"
        android:textColor="#1565c0"
        android:textSize="20sp"
        android:id="@+id/tv_mobile_no"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="210dp"
        android:hint="enter your mobile no"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_mobile"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/et_mobile_no"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="270dp"
        android:layout_marginLeft="10dp"
        android:text="Email"
        android:textSize="20sp"
        android:textColor="#1565c0"
        android:id="@+id/tv_email_register"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:hint="enter your email"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_email"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/et_email_register"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:text="Password"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:textColor="#1565c0"
        android:id="@+id/tv_password_register" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="390dp"
        android:hint="enter your password"
        android:layout_marginLeft="10dp"
        android:drawableRight="@drawable/ic_pass"
        android:textSize="20sp"
        android:textStyle="bold"
        android:id="@+id/et_password_register"/>
    <Button
        android:id="@+id/btn_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="110dp"
        android:layout_marginTop="450dp"
        android:background="@drawable/button_login"
        android:text="Sign Up"
        android:textColor="@android:color/white" />
    <TextView
        android:id="@+id/tv_account_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="510dp"
        android:layout_marginBottom="50dp"
        android:text="Already have an account? "
        android:textColor="#1565c0" />
    <TextView
        android:id="@+id/tv_sign_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="260dp"
        android:layout_marginTop="510dp"
        android:text="Sign In"
        android:textColor="@android:color/black" />
</androidx.cardview.widget.CardView>
</LinearLayout>
